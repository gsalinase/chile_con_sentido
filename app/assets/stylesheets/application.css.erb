@import url('https://fonts.googleapis.com/css?family=Quicksand|Raleway');

@media screen and (min-width: 480px ) and (max-width: 720px) {

	.center, #center{
		margin-left: 1%;
		margin-right: 1%;
		font-family: 'Quicksand', sans-serif;
		font-weight: 900;
	}

	.cien-porciento{
		width: 100%;
	}

	.lorem{
		text-align: center;
		margin-left: 1%;
		margin-right: 1%;
		font-family: 'Quicksand', sans-serif;
		font-weight: 900;
	}

}
@media screen and (min-width: 1024px ) and (max-width: 1980px ){
.banner{
	background-image: url('<%= asset_path "bg-pc.png" %>');
}	

	.center, #center{
		margin-left: 1%;
		margin-right: 1%;
		font-family: 'Quicksand', sans-serif;
		font-weight: 900;
	}

	.cien-porciento{
		width: 100%;
	}

	.lorem{
		text-align: center;
		margin-left: 1%;
		margin-right: 1%;
		font-family: 'Quicksand', sans-serif;
		font-weight: 900;
	}

	.ral{
		font-family: 'Raleway';
	}

	.footer{
		margin-top: 40vw;
		background-color: #48435c;
	}

	.lupa{
		-webkit-appearance: none;
		appearance: none;
		background: transparent url('<%= asset_path "lupa.png" %>');
		background-size: 100% auto;
		border: none;
		height: 27px;
		width: 28px;
		float: right;
		position: relative;
		top: -5px;
		right: 80px;
	}


	.lupa::after{
		clear: both;
	}

	.ft{
		font-family: Times;
	}

	.search{
		border-radius: 20px;
		height: 60px;
		font-size: 100%;
		position: relative;
		top: 40px;
	}

	.logo{
		width: 50px;
		position: relative;
		top: -10px;
	}

	nav > div{
		background-color: white;
		border-radius: 0;
	}

	nav{
		border-radius: none;
	}


	.search-all{
		position: relative;
		top: 150px;
	}

	.search-all h1{
		font-size: 70px;
	}

	.form-control{
		width: 90%;
		margin-left: 5%;
	}
}


