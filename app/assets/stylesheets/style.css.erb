@import url('https://fonts.googleapis.com/css?family=Quicksand|Raleway');

   nav > div{
    background-color: #EDFFEC;
    border-radius: 0;
  }

  nav{
    border-radius: none;
  }

  .banner{
    background-image: url('<%= asset_path "bg-pc.png" %>');
    margin-top: -20px;
    padding-top: 170px;
  } 

  #center{
      font-family: 'Quicksand', sans-serif;
      font-size: 1.5em;
  }

  .input-finder{
    width: 100%;
  }

  .heading {
    text-align: center;
    margin-left: 1%;
    margin-right: 1%;
    font-family: 'Quicksand', sans-serif;
    font-weight: 900;
  }

  .sub-heading{
    font-family: 'Raleway';
    text-align: center;
  }


  .lupa{
    -webkit-appearance: none;
    appearance: none;
    background: transparent url('<%= asset_path "lupa.png" %>');
    background-size: 100% auto;
    border: none;
    height: 27px;
    width: 28px;
    float: right;
    position: relative;
    top: 60px;
    right: 90px;
  }


  .lupa::after{
    clear: both;
  }

  .search{
    border-radius: 20px;
    height: 60px;
    font-size: 1em;
    top: 40px;
  }

  .logo{
    width: 50px;
    position: relative;
    top: -10px;
  }


  .search-all{
    position: relative;
  }

  .search-all h1{
    font-size: 70px;
  }

  .form-control{
    width: 90%;
    margin-left: 5%;
  }
  .footer{
    margin-top: 40vw;
    padding: 30px;
    background-color: #48435c;
  }

  .copyright{
    color: #EDFFEC;
    font-weight: 400;
  }


